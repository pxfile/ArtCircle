<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/search_bar_with_padding_contact"/>
    <View
        style="@style/line_thin_fill_style"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_search_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_search_note_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="25dp"
                android:text="@string/find_more_data"
                android:textColor="@color/gray17"
                android:textSize="@dimen/ts_normal_one"/>
            <View
                style="@style/line_thin_three_style"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/recommend_attention_artist"
                    android:textColor="@color/gray20"
                    android:textSize="@dimen/ts_normal_small"/>
                <TextView
                    android:id="@+id/tv_search_in_a_batch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/rotate_icon"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/find_in_a_batch"
                    android:textColor="@color/gray20"
                    android:textSize="@dimen/ts_normal_small"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_focus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="42dp"
                android:paddingRight="42dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_focus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_search_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/connection"
                android:paddingLeft="15dp"
                android:textColor="@color/gray17"
                android:textSize="@dimen/ts_normal_one"/>
            <View style="@style/line_thin_fill_style"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_search_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"/>
                <TextView
                    android:id="@+id/floating_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_orange_red_button"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/ts_normal_one"
                    android:visibility="invisible"/>
                <com.art.artcircle.widget.sortlistview.SideBarSearch
                    android:id="@+id/sidebar"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>