<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_content_corners"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_save_photo"
        android:layout_width="320dp"
        android:layout_height="74dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/down_save_icon"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="@string/save_img"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_bigger"/>
    </LinearLayout>

    <View
        android:id="@+id/v_divider_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/select_photo_divide"
        android:background="@color/yellow2"/>

    <LinearLayout
        android:id="@+id/ll_forward"
        android:layout_width="320dp"
        android:layout_height="74dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/forward_msg_icon"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="@string/forward"
            android:textColor="@color/gray5"
            android:textSize="@dimen/ts_normal_bigger"/>

    </LinearLayout>

</LinearLayout>