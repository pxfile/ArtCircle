<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dynamic_item_info_update_head_user_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dynamic_item_name_orange"
            android:textSize="16dp"/>

        <View
            android:id="@+id/vertical_divider1"
            android:layout_width="0.5dp"
            android:layout_height="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@color/transparent_black_30"/>

        <TextView
            android:id="@+id/tv_dynamic_item_info_update_head_user_honor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="修改个人信息,快去看看吧"
            android:textColor="#323232"
            android:textSize="12dp"/>
    </LinearLayout>

    <include
        android:id="@+id/ll_new_friend_info_update"
        layout="@layout/dynamic_item_user_base_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="9dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent_black_30"/>
</LinearLayout>